# === Match Watcher Config ===

# POST endpoint that returns your schedule array
API_URL=https://api.example.com/get_schedule

# API key auth (header name is configurable; defaults to X-API-Key)
API_KEY=YOUR_SECRET_API_KEY_VALUE
API_KEY_HEADER=X-API-Key

# Your name exactly as it appears in the API
MY_NAME=John Doe

# Comma-separated list of friendsâ€™ names (exactly as they appear in the API)
MY_FRIENDS=John Doe,Jane Smith,Mark Johnson

# Mail sender (use App Password)
MAIL_SERVICE=yahoo
MAIL_USER=yourgmail@gmail.com
MAIL_APP_PASSWORD=abcd efgh ijkl mnop

# Where to receive notifications
TO_EMAIL=yourgmail@gmail.com

# Poll every 30 minutes
POLL_CRON=*/30 * * * *
 
# State file path
STATE_FILE=./data/state.json

# Express port
PORT=8080
